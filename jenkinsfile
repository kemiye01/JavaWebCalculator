pipeline {
    agent any
    stages {
        stage ('initialize mvn') {
            steps {
                sh 'mvn initialize'
            }
        }
          stage ('build') {
            steps {
                sh 'mvn clean package'
            }
        }
          stage ('test') {
            steps {
                sh 'mvn test'
            }
        }
          stage ('deployment') {
            steps {
                ansible_ssh_private_key_file=./project.pem ansible_ssh_common_args='-o StrictHostKeyChecking=no'
                ansiblePlaybook become: true, disableHostKeyChecking: true, installation: 'ansible', inventory: 'host.ini', playbook: 'cal-play.yml'
            }
        }       
    }
}
