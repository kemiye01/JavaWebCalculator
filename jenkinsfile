pipeline {
    agent any
    stages {
        stage ('initialize mvn') {
            steps {
                sh 'mvn initialize'
            }
        }
          stage ('build') {
            steps {
                sh 'mvn clean package'
            }
        }
          stage ('test') {
            steps {
                sh 'mvn test'
            }
        }
          stage ('deployment') {
            steps {
                sh "ls /home"
                sh "ls /home/ubuntu"
                ansiblePlaybook become: true, disableHostKeyChecking: true, installation: 'ansible', inventory: 'host.ini', playbook: 'cal-play.yml'
            }
        }       
    }
}
