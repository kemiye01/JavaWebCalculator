pipeline {
    agent any
    stages {
        stage ('initialize mvn') {
            steps {
                sh 'mvn initialize'
            }
        }
          stage ('build') {
            steps {
                sh 'mvn clean package'
            }
        }
          stage ('test') {
            steps {
                sh 'mvn test'
            }
        }
          stage ('deployment') {
            steps {
                ansiblePlaybook become: true, disableHostKeyChecking: true, StrictHostKeyChecking=no, installation: 'ansible', inventory: 'host.ini', playbook: 'cal-play.yml'
            }
        }       
    }
}
